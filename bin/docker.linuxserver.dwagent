#!/bin/sh

name="$(basename $0)"
. /etc/profile

oe_setup_addon "$name"

# set docker image
DOCKERIMAGE="napster32/dwagent-arm"

docker rm "$name" 2>/dev/null
docker rmi $(docker images | grep "$DOCKERIMAGE" | grep '<none>' | sed 's/\s\+/\t/g' | cut -f3) 2> /dev/null
docker run --name="$name" \
           --restart=always\
		   --network="host"\
           --rm \
		   -it \
           "$DOCKERIMAGE":latest